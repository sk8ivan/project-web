gris_oscuro = #444
azul = #22BCE0
naranja = #DD4F24
body
	background #E8E8E8
	color gris_oscuro
	font-family arial
	font-size 16px

header
	background gris_oscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 1


	.logo
		border-right 1px solid azul 
		width 60px;

		img
			width 52px

	.titular
		margin 0 60px 0 70px

		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
	.filtro
		color azul
		font-size 14px
		font-weight bold
		font-style italic
		text-decoration none
	
	.publicar
		background naranja
		color white
		font-style italic
		margin -5px 1em 0 0
		padding 0.2em 0.5em 
		text-decoration none
		text-shadow 1px 1px 0px black


		 
		
			

	.usuario
		position absolute
		right -10px
		top -10px
		.avatar
			position relative
			z-index 2
			img
				width 50px
				border-radius 50%
	.flechita
		background naranja
		color white 
		display block
		position absolute
		right 20%
		text-align right
		top 40%
		width 2em
nav
	background azul
	border-left 15px solid white
	position relative

	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0
		position absolute
		top 0


	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap
		

		li 
			display inline-block
			a
				color white
				display block
				margin 0 0.5em 
				padding-top 0
				padding 0 0.2em
				text-decoration none




.left
	float left
.right
	float right

	


